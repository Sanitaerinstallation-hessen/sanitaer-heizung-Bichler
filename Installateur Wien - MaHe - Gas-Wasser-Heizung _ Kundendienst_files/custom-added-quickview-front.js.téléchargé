jQuery(document).ready(function(){function PRDQV_prettyPhoto_Load(){jQuery("a.zoom").prettyPhoto({hook:'data-rel',social_tools:!1,theme:'pp_woocommerce',horizontal_padding:20,opacity:0.8,deeplinking:!1});jQuery("a[data-rel^='prettyPhoto']").prettyPhoto({hook:'data-rel',social_tools:!1,theme:'pp_woocommerce',horizontal_padding:20,opacity:0.8,deeplinking:!1,})}
jQuery('body').on('click','.prdqv_ocqkvwbtn',function(){jQuery('html').addClass("prdqv_qview_popup_body");jQuery('body').append('<div class="prdqv_loading"><img src="'+object_name+'/images/'+prdqv_qw_popup_loader+'" class="prdqv_loader"></div>');var loading=jQuery('.prdqv_loading');loading.show();var id=jQuery(this).data("id");var current=jQuery(this);jQuery.ajax({url:ajax_url,type:'POST',data:'action=prdqv_productsquick&popup_id_pro='+id,success:function(response){var loading=jQuery('.prdqv_loading');loading.remove();jQuery("#prdqv_qview_popup").css("display","block");jQuery("#prdqv_qview_popup").html(response);var form_variation=jQuery("#prdqv_qview_popup").find('.variations_form');form_variation.each(function(){jQuery(this).wc_variation_form()});PRDQV_prettyPhoto_Load();jQuery('.prdqv_qview_image .woocommerce-product-gallery').addClass('br_preview_galery_ready');jQuery('.br_preview_galery_ready.woocommerce-product-gallery').each(function(){jQuery(this).wc_product_gallery()});jQuery('body').trigger('resize')},error:function(){alert('Error occured')},});return!1});var modal=document.getElementById("prdqv_qview_popup");var span=document.getElementsByClassName("prdqv_qview_close")[0];jQuery(document).on('click','.prdqv_qview_close',function(){jQuery("#prdqv_qview_popup").css("display","none");jQuery('html').removeClass("prdqv_qview_popup_body")});window.onclick=function(event){if(event.target==modal){modal.style.display="none";jQuery('html').removeClass("prdqv_qview_popup_body")}}})